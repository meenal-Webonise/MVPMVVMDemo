<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/card_radius"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/view_padding">


        <TextView
            android:id="@+id/textViewLabelName"
            style="@style/LabelTextView_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:text="@string/textLabelName" />

        <TextView
            android:id="@+id/textViewName"
            style="@style/MyTextViewStyle_Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewLabelName"

            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_toEndOf="@+id/textViewLabelName"
            android:layout_toRightOf="@+id/textViewLabelName"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/textViewLabelEmail"
            style="@style/LabelTextView_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewLabelName"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="@string/textLabelEmail" />

        <TextView
            android:id="@+id/textViewEmail"
            style="@style/MyTextViewStyle_Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewName"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_toEndOf="@+id/textViewLabelEmail"
            android:layout_toRightOf="@+id/textViewLabelEmail"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewLabelBody"
            style="@style/LabelTextView_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewLabelEmail"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="@string/textLabelBody" />

        <TextView
            android:id="@+id/textViewBody"
            style="@style/MyTextViewStyle_Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewEmail"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_toEndOf="@+id/textViewLabelBody"
            android:layout_toRightOf="@+id/textViewLabelBody"
            android:ellipsize="end"
            android:maxLines="3" />


    </RelativeLayout>
</android.support.v7.widget.CardView>